<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_magento_backend" model="ir.actions.act_window">
        <field name="name">Magento Backends</field>
        <field name="res_model">magento.backend</field>
        <!--        <field name="view_type">form</field>-->
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_magento_backend_tree"/>
    </record>
    <record id="action_magento_store" model="ir.actions.act_window">
        <field name="name">Magento Stores</field>
        <field name="res_model">magento.store</field>
        <!--        <field name="view_type">form</field>-->
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_magento_store_tree"/>
    </record>
    <record id="action_magento_website" model="ir.actions.act_window">
        <field name="name">Magento Websites</field>
        <field name="res_model">magento.website</field>
        <!--        <field name="view_type">form</field>-->
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_magento_website_tree"/>
    </record>

    <record id="action_magento_storeview" model="ir.actions.act_window">
        <field name="name">Magento Storeviews</field>
        <field name="res_model">magento.storeview</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_magento_storeview_tree"/>
    </record>

    <record id="action_magento_account_tax" model="ir.actions.act_window">
        <field name="name">Magento Account Tax</field>
        <field name="res_model">magento.account.tax</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_product_category_public" model="ir.actions.act_window">
        <field name="name">Product Categories Public</field>
        <field name="res_model">product.category.public</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_magento_attribute_set" model="ir.actions.act_window">
        <field name="name">Magento Attribute Sets</field>
        <field name="res_model">magento.product.attribute.set</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="action_magento_product_product">
        <field name="name">Magento Product</field>
        <field name="res_model">magento.product.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_magento_root"
              parent="connector.menu_connector_root"
              name="Magento"
              sequence="10"
              groups="connector.group_connector_manager"/>

    <menuitem id="menu_magento_backend"
              name="Backends"
              parent="menu_magento_root"
              action="action_magento_backend"/>

    <menuitem id="menu_magento_website"
              name="Websites"
              parent="menu_magento_root"
              sequence="20"
              action="action_magento_website"/>

    <menuitem id="menu_magento_store"
              name="Stores"
              parent="menu_magento_root"
              sequence="30"
              action="action_magento_store"/>

    <menuitem id="menu_magento_storeview"
              name="Storeviews"
              parent="menu_magento_root"
              sequence="40"
              action="action_magento_storeview"/>
    <menuitem id="menu_magento_category"
              name="Magento Categories"
              parent="menu_magento_root"
              sequence="50"
              action="action_product_category_public"/>
    <menuitem id="menu_magento_account_tax" name="Magento Taxes"
              parent="menu_magento_root"
              sequence="60"
              action="action_magento_account_tax"/>

    <menuitem id="menu_magento_attribute_set"
                name="Magento Attribute Sets"
                parent="menu_magento_root"
                sequence="70"
                action="action_magento_attribute_set"/>

    <menuitem id="menu_magento_product_product"
                name="Magento Products"
                parent="menu_magento_root"
                sequence="80"
                action="action_magento_product_product"/>

</odoo>
