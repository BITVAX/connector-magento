<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_image_kanban_view" model="ir.ui.view">
            <field name="name">product_image_kanban_view</field>
            <field name="model">product.image</field>
            <field name="arch" type="xml">
                <kanban string="Product Images" class="o_attachments_previews" default_order="sequence"
                        default_group_by="attribute_value_id" on_create="quick_create"
                        quick_create_view="product_variant_multi_image.quick_create_image_form">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="image"/>
                    <field name="sequence"/>
                    <field name="base_product_tmpl_id"/>
                    <field name="attribute_value_id"/>
                    <field name="is_primary_image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="o_attachment o_website_sale_image_card oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <br/>
                                        </div>
                                        <div class="o_dropdown_kanban dropdown">
                                            <a role="button" class="dropdown-toggle o-no-caret btn"
                                               data-toggle="dropdown" data-display="static" href="#"
                                               aria-label="Dropdown menu" title="Dropdown menu">
                                                <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <div class="dropdown-menu" role="menu">
                                                <a t-if="widget.deletable" role="menuitem" type="delete"
                                                   class="dropdown-item">Delete
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_attachment_wrap">
                                            <div class="o_image_box">
                                                <field name="image" style="width:282px;" widget="image"/>
                                            </div>

                                            <t t-set="size" t-value="[record.image.value][0]"/>
                                            <t t-set="size_status" t-value="'normal'"
                                               t-if="size.indexOf('Bytes') !== -1 or ( size.indexOf('Kb') !== -1 and size[2]=='.')"/>
                                            <t t-set="size_status" t-value="'warning'"
                                               t-elif="( size.indexOf('Kb') !== -1 and size[3]=='.')"/>
                                            <t t-set="size_status" t-value="'danger'" t-else=""/>
                                            <t t-set="message" t-value="'Acceptable file size'"
                                               t-if="size_status == 'normal'"></t>
                                            <t t-set="message"
                                               t-value="'Huge file size. The image should be optimized/reduced.'"
                                               t-elif="size_status == 'warning'"></t>
                                            <t t-set="message"
                                               t-value="'Optimization required! Reduce the image size or increase your compression settings.'"
                                               t-else=""></t>

                                            <span t-attf-class="o_website_sale_image_card_size badge badge-#{size_status}"
                                                  t-att-title="message">
                                                <t t-esc="record.image.value"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span>Main Image:
                                                <field name="is_primary_image" widget="boolean_toggle"/>
                                            </span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span>Template Image:
                                                <field name="use_for_template" widget="boolean_toggle"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="quick_create_image_form" model="ir.ui.view">
            <field name="name">quick_create_image_form</field>
            <field name="model">product.image</field>
            <field name="sequence">1000</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <field name="base_product_tmpl_id" invisible="1"/>
                        <field name="valid_product_attribute_value_ids" invisible="1"/>
                        <field name="name"/>
                        <field name="image" widget="image"/>
                        <field name="sequence"/>
                        <field name="image_product_id" domain="[('product_tmpl_id', '=', base_product_tmpl_id)]"/>
                        <field name="attribute_value_id"
                               domain="['&amp;', ('id', 'in', valid_product_attribute_value_ids),('create_image', '=', True)]"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="product_image_search_view" model="ir.ui.view">
            <field name="name">Product image search view</field>
            <field name="model">product.image</field>
            <field name="arch" type="xml">
                <search string="Name">
                    <field name="name" string="string"/>
					<separator />
					<filter name="filter_attribute_images" string="Attribute Images" domain="[('attribute_value_id', '!=', False)]" />
					<filter name="filter_variant_images" string="Variant Images" domain="[('image_product_id', '!=', False)]" />
					<separator />
					<group>
						<filter name="by_attribute_value" string="By Attribute Value"  context="{'group_by': 'attribute_value_id'}" />
						<filter name="by_product_variant" string="By product" context="{'group_by': 'image_product_id'}" />
					</group>
                </search>
            </field>
        </record>

        <record id="action_product_image_kanban_view" model="ir.actions.act_window">
            <field name="name">Product Images</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.image</field>
            <field name="view_mode">kanban,list,form</field>
        </record>

    </data>
</odoo>