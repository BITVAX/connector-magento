<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_product_image_form" model="ir.ui.view">
            <field name="name">product.image.form</field>
            <field name="model">product.image</field>
            <field name="inherit_id" ref="website_sale.view_product_image_form"/>
            <field name="arch" type="xml">
                <field name="product_tmpl_id" position="after">
                    <group>
                        <field name="base_product_tmpl_id" invisible="1"/>
                        <field name="is_primary_image"/>
                        <field name="image_product_id" domain="[('product_tmpl_id', '=', base_product_tmpl_id)]"/>
                        <field name="attribute_value_id"
                               domain="['&amp;', ('id', 'in', valid_product_attribute_value_ids),('create_image', '=', True)]"/>
                        <field name="sequence"/>
                        <field name="valid_product_attribute_value_ids" invisible="1"/>
                    </group>
                </field>

            </field>
        </record>

    </data>
</odoo>