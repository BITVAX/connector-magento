<?xml version="1.0" encoding="utf-8"?>
<odoo>


	<record id="view_magento_product_catalog_form"
		model="ir.ui.view">
		<field name="name">magento.product.product.catalog.form</field>
		<field name="model">magento.product.product</field>
		<field name="inherit_id"
			ref="connector_magento.view_magento_product_form"></field>
		<field name="arch" type="xml">
			<sheet position="inside">
				<group>

					<field name="attribute_set_id" required="1" />
				</group>
			</sheet>

			<xpath expr="//div[@name='button_box']" position="inside">
				<button name="export_product_button" class="oe_stat_button"
					string="Export Attributes" type="object" />
				<button name="resync" string="resyn All"
					class="oe_stat_button" help="Stck, Attributes, ..." type="object" />
				<button name="%(action_magento_custom_attributes)d"
					type="action" string="Custom Values" class="oe_stat_button"
					context="{'search_default_magento_product_id': [active_id], 
							'default_attribute_set_id': attribute_set_id,
							'default_magento_product_id': active_id, }" />

			</xpath>
		</field>
	</record>


