<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="product_product_form_view_magento1">
			<field name="name">product.normal.form.magento1</field>
			<field name="model">product.product</field>
			<field name="priority" eval="20"></field>
			<field name="inherit_id" ref="product.product_normal_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='default_code']" position="attributes">
					<attribute name="string">SKU</attribute>
				</xpath>

				<xpath expr="//notebook//page[@name='connector']" position="before">
					<page string="Magento">
						<group>
							<field name="attribute_set_id" />
						</group>
						<separator></separator>
						<group>
							<field name="magento_attribute_line_ids">
								<tree editable="top">
									<field name="attribute_id" domain="[('create_variant', '=', False),]" />
									<field name="odoo_field_name" />
									<field name="magento_attribute_type" readonly="1" />
									<field name="attribute_text" />
								</tree>
							</field>
						</group>
						<separator></separator>
					</page>
				</xpath>


				<xpath
					expr="//notebook/page[@name='connector']//field[@name='magento_bind_ids']"
					position="replace">
					<field name="magento_bind_ids" nolabel="1">
						<tree>
							<field name="backend_id" />
							<field name="product_type" />
							<button name="export_product_button" string="Export Attributes"
								type="object" class="oe_highlight"/>
							<button name="resync" string="resyn All" help="Stck, Attributes, ..."
								type="object" class="oe_highlight"/>
						</tree>
					</field>


				</xpath>

			</field>
		</record>

		<record model="ir.ui.view" id="product_attribute_tree_view_magento">
			<field name="name">product.attribute.tree.magento</field>
			<field name="model">product.attribute</field>
			<field name="inherit_id" ref="product.attribute_tree_view" />
			<field name="arch" type="xml">
				<xpath expr="//tree" position="attributes">
					<attribute name="editable"></attribute>
				</xpath>
				<!-- <xpath expr="//tree//field[@name='create_variant']" position="after"> 
					<field name="attribute_code" /> <field name="odoo_field_name" /> </xpath> -->
			</field>
		</record>




		<record id="attribute_action" model="ir.actions.act_window">
			<field name="name">Attributes</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.attribute</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
		</record>

		<record model="ir.ui.view" id="product_attribute_form_view_magento">
			<field name="name">product.attribute.form.magento</field>
			<field name="model">product.attribute</field>
			<field name="inherit_id" ref="product.product_attribute_view_form"></field>
			<field name="arch" type="xml">
				<xpath expr="//form//group[@name='values_ids']" position="replace">
					<notebook>
						<page name="value_page" string="Values">
							<group name="values_ids">
								<label for="value_ids" string="Attribute Values" />
								<field name="value_ids" widget="one2many_list" nolabel="1">
									<tree string="Values" editable="bottom">
										<field name="name" />
									</tree>
									<form string="Values">
										<field name="name" />
									</form>
								</field>
								<field name="create_variant" groups="base.group_no_one" />
							</group>
						</page>
						<page name="magento_page" string="Magento">
							<group>
								<!-- <group name="magento" string="Magento"> <field name="attribute_code" 
									readonly="1" /> <field name="odoo_field_name" /> </group> -->
							</group>
							<field name="magento_bind_ids" />
						</page>

					</notebook>

				</xpath>
			</field>
		</record>
	</data>
</openerp>
